<h3>Build Your Own Pizza</h3>

<form method="POST" action="/build-your-own/confirmation" id="build-form">
<label for="size">Size</label>
<select id="size" name="size">
    <option value="Small">Small</option>
    <option value="Medium">Medium</option>
    <option value="Large">Large</option>
</select>
<div>
<p>Toppings</p>
{{#each toppings}}
<input type="checkbox" name="toppings" id="{{this}}" value="{{this}}">
<label for="{{this}}">{{this}}</label>
{{/each}}
</div>
<input type="checkbox" name="gluten-free" id="gluten-free" value="true">
<label for="gluten-free">Gluten-free crust? ($2.00 extra)</label>
<label for="special-instructions">Special Instructions (Optional)</label>
<textarea rows="4" cols="50" name="special-instructions" form="build-form" placeholder="None"></textarea>
<button type="submit">Order Now</button>
</form>

<a href="/">Never Mind</a>